<Merger>:
    orientation:"vertical"
    image:bin
    thresh_slider:thresh_slider
    size_slider:size_slider
    rows:3
    cols:3
    Image:
        id:bin
        source:"pics/bin.png"
        size_hint:None,None
        allow_stretch:True
    Slider:
        id:thresh_slider
        min:0
        max:255
        on_value:self.parent.update()
        value:170
    Slider:
        id:size_slider
        min:10
        max:300
        on_value:self.parent.update()
        value:170
    Label:
        text:"(Height:{},ThreshHold{})".format(int(size_slider.value),int(thresh_slider.value))
    Button:
        text:"next"
        on_press:self.parent.next()
#        anchor_x:"center"
#        anchor_y:"bottom"
#        value:val
