<FileScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: sp(52)

            Button:
                text:"Select"
                on_press: root.manager.switch_to_options(fc.selection)

        FileChooser:
            id: fc
#            path:"D/"
            FileChooserIconLayout
