#:kivy
<Merger>:
    orientation:"vertical"
    image:bin
    thresh_slider:thresh_slider
    size_slider:size_slider
    blur_slider:blur_slider
    rows:3
    cols:3
    Image:
        id:bin
        source:"pics/bin.png"
        size_hint:None,None
        allow_stretch:True
    Slider:
        id:thresh_slider
        min:0
        max:255
        on_value:self.parent.update()
        value:170
    Slider:
        id:size_slider
        min:10
        max:300
        on_value:self.parent.update()
        value:170
    Slider:
        id:blur_slider
        min:0
        max:10
        on_value:self.parent.update()
        value:0
    Label:
        text:"(Height:{},ThreshHold{},Blur{})".format(int(size_slider.value),int(thresh_slider.value),int(blur_slider.value))
        text_size: self.width, None
#        size:None,100
    Button:
        text:"next"
        on_press:root.parent.next_screen()
    Button:
        text:"previous"
        on_press:root.parent.prev_screen()


#        anchor_x:"center"
#        anchor_y:"bottom"
#        value:val
#<Filechoose@Filechooser>:
